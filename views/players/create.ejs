<% include ../partials/header.ejs %>

<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Create a New Player</h1>
        <div style="width:30%; margin: 40px auto;">
            <form action="/players" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="player[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="year" name="player[year]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/players">Back to Players</a>
        </div>
    </div>
</div>

